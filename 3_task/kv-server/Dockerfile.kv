# .Dockerfile.kv

# Stage 1 — builder
FROM node:18 AS builder

WORKDIR /app

COPY ../kv-server/package*.json ./
RUN npm ci

COPY ../kv-server .
RUN npm run build

# Stage 2 — runtime
FROM node:18-alpine AS runtime

WORKDIR /app

COPY --from=builder /app/dist ./dist
COPY ../kv-server/package*.json ./
RUN npm ci --omit=dev

EXPOSE 3000
CMD ["node", "dist/index.js"]
